<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/busnames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:text="busname"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"
        android:text="seats"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:textColor="@drawable/common_google_signin_btn_icon_dark"
        android:text="departure"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textColor="@drawable/common_google_signin_btn_text_dark"
        android:text="arrival"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_marginTop="105dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="day"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="130dp"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalSeat"
        android:layout_marginTop="155dp"
        android:text="TotalSeat"
        android:textColor="@color/colorPrimaryDark"

        android:textSize="18sp"/>
</RelativeLayout>