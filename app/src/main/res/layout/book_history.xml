<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ticket">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pass_names"
        android:text="PassengerName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/busnamess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:text="busname"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:id="@+id/IdNo"
        android:text="IdNo."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/seatNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="70dp"
        android:text="seatNo"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/departure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:textColor="@drawable/common_google_signin_btn_icon_dark"
        android:text="departure"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/arrival"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textColor="@drawable/common_google_signin_btn_text_dark"
        android:text="arrival"
        android:textSize="18sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_marginTop="145dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="day"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="170dp"
        android:text="date"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_marginTop="195dp"
        android:text="status"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold|italic"/>

</RelativeLayout>